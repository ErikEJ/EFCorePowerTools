<local:WizardResultPageFunction
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
    xmlns:viewModels="clr-namespace:EFCorePowerTools.ViewModels"
    xmlns:local="clr-namespace:EFCorePowerTools.Wizard" 
    xmlns:locale="clr-namespace:EFCorePowerTools.Locales"
    xmlns:statusbar="clr-namespace:Westwind.Wpf.Statusbar"
    x:Class="EFCorePowerTools.Wizard.Wiz4_StatusDialog"
    KeepAlive="True"
    Background="#FFF0F0F0"    
    WindowTitle="{x:Static locale:ReverseEngineerLocale.ChooseDatabaseConnection}">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Page4LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" >Reverse Engineer Status</Label>
                <TextBox Grid.Row="1" 
                         Padding="5" Margin="5"
                         TextChanged="TextChangedEventHandler"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         Text="{Binding GenerateStatus, Mode=TwoWay}">
                </TextBox>
            </Grid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <Button Margin="0,0,5,0" Name="backButton" IsEnabled="False" Click="BackButton_Click" Width="70" xml:space="preserve">&lt; _Previous</Button>
            <Button Margin="0,0,5,0" Name="nextButton" IsEnabled="false" Width="70" xml:space="preserve">_Next &gt;</Button>
            <Button Margin="0,0,5,0" Content="Finish" Click="FinishButton_Click" Width="70" />
            <Button Margin="0,0,5,0" Name="cancelButton" IsEnabled="False" Click="CancelButton_Click" Width="70" IsCancel="True">_Cancel</Button>
        </StackPanel>
        <statusbar:StatusbarControl Grid.Row="3" x:Name="Statusbar"/>
    </Grid>
</local:WizardResultPageFunction>